<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.LoginActivity">

    <!-- Login progress -->


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/logo"
                   android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/shyk"
                    android:textSize="30sp"
                    android:textColor="#f90e26"/>

            </LinearLayout>
            <RadioGroup
                android:id="@+id/user_type"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/gjdzz_rb"
                    android:background="@drawable/backgrund_color_selector"
                    android:textColor="@drawable/text_color_selector"
                    android:button="@null"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:checked="true"
                    android:text="各级党组织"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:background="@drawable/backgrund_color_selector"
                    android:padding="8dp"
                    android:textColor="@drawable/text_color_selector"
                    android:button="@null"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="党委部门"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dwbm_rb" />

                <RadioButton
                    android:id="@+id/glyh_rb"
                    android:background="@drawable/backgrund_color_selector"
                    android:padding="8dp"
                    android:textColor="@drawable/text_color_selector"
                    android:button="@null"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="管理用户"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/user_layout"
                android:layout_marginTop="30sp"
                android:focusable="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/left_corner_bt_checked_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_image1"
                    android:layout_marginLeft="15sp"
                    android:src="@mipmap/yhm"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:background="@null"
                    android:layout_toRightOf="@+id/user_image1"
                    android:padding="8sp"
                    android:id="@+id/user_name1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="点击选择"
                    android:inputType="text"
                    android:maxLines="1"
                    android:gravity="center|left"
                    android:textColor="#000"
                    android:textSize="18sp"
                  />

            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/user_layout2"
                android:layout_marginTop="30sp"
                android:focusable="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/left_corner_bt_checked_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_image2"
                    android:layout_marginLeft="15sp"
                    android:src="@mipmap/yhm"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:background="@null"
                    android:layout_toRightOf="@+id/user_image2"
                    android:padding="8sp"
                    android:id="@+id/user_name2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="用户名"
                    android:inputType="text"
                    android:maxLines="1"
                    android:gravity="center|left"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/jt"
                    android:layout_marginRight="15dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_layout3"
                android:visibility="gone"
                android:layout_marginTop="30sp"
                android:focusable="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/left_corner_bt_checked_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_image3"
                    android:layout_marginLeft="15sp"
                    android:src="@mipmap/yhm"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:background="@null"
                    android:layout_toRightOf="@+id/user_image3"
                    android:padding="8sp"
                    android:id="@+id/user_name3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="用户名"
                    android:inputType="text"
                    android:maxLines="1"
                    android:gravity="center|left"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/left_corner_bt_checked_default"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mm_image"
                    android:layout_marginLeft="15sp"
                    android:src="@mipmap/mm"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:layout_toRightOf="@+id/mm_image"
                    android:background="@null"
                    android:padding="8sp"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="密码"
                    android:gravity="center|left"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="#000"
                 />

            </RelativeLayout>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/email_sign_in_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_sign_in"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#f90e26"
                 />
    <TextView
        android:id="@+id/cz_text"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="重置"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#050505"
        android:background="#d1cccd"
        />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
